<%- include('partials/header') %>

<!-- Navigation -->
<nav class="navbar navbar-expand-lg bg-dark navbar-dark py-3">
    <div class="container">
        
        <a href="#" class="navbar-brand">
            <img src="/images/bbc-nodejs.png" width="30" height="30" class="d-inline-block align-top" alt="">
            Patient Management System
        </a>

    </div>
</nav>


<div class="container">
    <h2>Editing <%= patient.surname %> <%= patient.firstname %> </h2>
    <form action="/<%=patient.id%>?_method=PUT" method="POST" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-10 mb-3 form-group">
                <input type="text" class="form-control" placeholder="surname" name="surname" value="<%= patient.surname %>" required>
            </div>

            <div class="col-md-10 mb-3 form-group">
                <input type="text" class="form-control" placeholder="firstname" name="firstname" value="<%= patient.firstname %>" required>
            </div>

            <div class="col-md-10 mb-3 form-group">
               Date of Birth <input type="date" class="form-control" placeholder="Date of Birth" name="dateOfBirth"  value="<%= patient.dateOfBirth %>" required>
            </div>

            <div class="col-md-10 mb-3 form-group">
                Home Address <textarea name="HomeAddress" class="form-control" rows="20" cols="50" placeholder="<%= patient.HomeAddress %>"  required></textarea>
            </div>

            <div class="col-md-10 mb-3 form-group">
                <input type="text" class="form-control" placeholder="occupation" name="occupation" value="<%= patient.occupation %>" required>
            </div>
            
            <div class="col-md-10 mb-3 form-group">
                <input type="text" class="form-control" placeholder="nameOfIllness" name="nameOfIllness" value="<%= patient.nameOfIllness %>" required>
            </div>
            
            <!-- <div class="col-md-10 mb-3 form-group">
                Upload Picture: <input type="file" accept="image/*" name="photo" class="form-control text-black" required>
            </div> -->

            <div class="col-md-10 mb-3 form-group">
                <a href="/" class="btn btn-warning">Cancel</a>
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </div>
    </form>
</div>

<%- include('partials/footer') %>
